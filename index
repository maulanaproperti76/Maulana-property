            {
                id: 8,
                imageUrl: "https://source.unsplash.com/random/600x600/?luxury-house,8",
                title: "Home Theater",
                description: "Ruang home theater dengan akustik yang dirancang khusus. Pengalaman menonton layaknya di bioskop."
            },
            {
                id: 9,
                imageUrl: "https://source.unsplash.com/random/600x600/?luxury-house,9",
                title: "Kolam Renang Private",
                description: "Kolam renang private dengan desain yang memukau. Cocok untuk relaksasi dan menjaga kesehatan."
            }
        ];

        // Fungsi untuk memuat gallery
        function loadGallery() {
            const galleryGrid = document.getElementById('gallery-grid');
            
            portfolioItems.forEach(item => {
                const galleryItem = document.createElement('div');
                galleryItem.className = 'gallery-item';
                galleryItem.innerHTML = `
                    <img src="${item.imageUrl}" alt="${item.title}">
                    <div class="gallery-item-overlay">
                        <h3>${item.title}</h3>
                    </div>
                `;
                
                galleryItem.addEventListener('click', () => {
                    openModal(item);
                });
                
                galleryGrid.appendChild(galleryItem);
            });
        }

        // Fungsi untuk membuka modal
        function openModal(item) {
            const modal = document.getElementById('image-modal');
            const modalImage = document.getElementById('modal-image');
            const modalTitle = document.getElementById('modal-title');
            const modalDescription = document.getElementById('modal-description');
            
            modalImage.src = item.imageUrl;
            modalImage.alt = item.title;
            modalTitle.textContent = item.title;
            modalDescription.textContent = item.description;
            
            modal.classList.add('show');
            
            // Tambahkan event listener untuk menutup modal
            document.getElementById('close-modal').onclick = function() {
                modal.classList.remove('show');
            }
            
            window.onclick = function(event) {
                if (event.target == modal) {
                    modal.classList.remove('show');
                }
            }
        }

        // Memuat gallery ketika halaman siap
        document.addEventListener('DOMContentLoaded', loadGallery);
    </script>
